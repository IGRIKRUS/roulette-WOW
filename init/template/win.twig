{% extends 'layout.twig' %}

{% block page %}
    <section class="content-header">
        <h1>
            {{ lang._('app:win:head') }}
            <small>{{ lang._('app:win:list') }}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-home"></i> {{ lang._('app:menu:home') }}</a></li>
            <li class="active">{{ lang._('app:win:head') }}</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-primary">
          {% if games != false %}
            <table class="table table-striped table-hover macros-list">
                <thead>
                <tr>
                    <th>â„–#</th>
                    <th>{{ lang._('app:win:colItem') }}</th>
                    <th>{{ lang._('app:win:colName') }}</th>
                    <th>{{ lang._('app:win:colDate') }}</th>
                    <th>{{ lang._('app:win:colChars') }}</th>
                    <th><i class="fa fa-cogs"></i></th>
                </tr>
                </thead>
                <tbody>
                {% for game in games %}
                    <tr data-id="{{ game.id }}">
                        <td>#{{ loop.index }}</td>
                        <td><img class="item-win" data-toggle="popover" data-content="{{ game.item_tooltip|raw }}" src="https://wowimg.zamimg.com/images/wow/icons/large/{{ game.item_icon }}"></td>
                        <td>{{ game.item_name }}</td>
                        <td>{{ game.date|date("[d-m-Y] H:i:s") }}</td>
                        <td>
                            <select class="form-control char-select" name="char">
                                {% for char in user.chars %}
                                    <option value="{{ loop.index0 }}">{{ char.name }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td><button class="btn btn-sm btn-primary" id="send">{{ lang._('app:win:btnSend') }}</button></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
          {% else %}
              <div class="box-header">{{ lang._('app:win:noWin') }}</div>
          {% endif %}
        </div>
    </section>
{% endblock %}