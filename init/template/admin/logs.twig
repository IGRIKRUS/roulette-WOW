{% extends 'admin/layout.twig' %}

{% block page %}
    <section class="content-header">
        <h1>
            {{ lang._('admin:logs:headList') }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-home"></i> Admin</a></li>
            <li class="active">{{ lang._('admin:logs:headList') }}</li>
        </ol>
    </section>
    <section class="content">
        <div class="box box-primary">
    {% if logs != false %}
        <table class="table table-striped table-hover">
            {% for k,log in logs %}
                <tr>
                    <td>#{{ k }}</td>
                    <td>{{ log }}</td>
                    <td><a href="/admin/logs/{{ k }}"><i class="fa fa-file-code-o"></i></a></td>
                </tr>
            {% endfor %}
        </table>
            {% else %}
            <div class="box-header">{{ lang._('admin:logs:noLogs') }}</div>
            {% endif %}
        </div>
    </section>
{% endblock %}