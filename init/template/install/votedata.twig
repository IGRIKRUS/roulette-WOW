<section class="content-header">
    <h1> config votedata </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">{{ lang._('install:steps:votedata') | raw }}</div>
        <form id="config" class="form-horizontal" method="post" action="/install/votedata">
            <div class="box-body">
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="install"> {{ lang._('formsInstall:checkVote') }}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="host" class="col-sm-3 control-label">{{ lang._('formsInstall:inputHost') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="db[host]" class="form-control" id="host" placeholder="127.0.0.1">
                    </div>
                </div>
                <div class="form-group">
                    <label for="port" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPort') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="db[port]" class="form-control" id="port" placeholder="3306">
                    </div>
                </div>
                <div class="form-group">
                    <label for="user" class="col-sm-3 control-label">{{ lang._('formsInstall:inputUser') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="db[user]" class="form-control" id="user" placeholder="root">
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPass') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="db[pass]" class="form-control" id="pass" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="dbname" class="col-sm-3 control-label">{{ lang._('formsInstall:inputDB') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="db[dbname]" class="form-control" id="dbname" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="tableVote" class="col-sm-3 control-label">{{ lang._('formsInstall:inputTable') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="tableVote" class="form-control" id="tableVote" placeholder="vote">
                    </div>
                </div>
                <div class="form-group">
                    <label for="columnVote" class="col-sm-3 control-label">{{ lang._('formsInstall:inputColVp') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="columnVote" class="form-control" id="columnVote" placeholder="vote">
                    </div>
                </div>
                <div class="form-group">
                    <label for="columnName" class="col-sm-3 control-label">{{ lang._('formsInstall:inputColName') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="columnName" class="form-control" id="columnName" placeholder="name">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">{{ lang._('formsInstall:btnSave') }}</button>
            </div>
        </form>
    </div>
</section>