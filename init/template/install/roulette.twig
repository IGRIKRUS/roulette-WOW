<section class="content-header">
    <h1> config roulette </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            {{ lang._('install:steps:roulette') | raw }}
        </div>
        <form id="config" class="form-horizontal" method="post" action="/install/roulette">
            <div class="box-body">
                <div class="form-group">
                    <label for="host" class="col-sm-3 control-label">{{ lang._('language') }}</label>
                    <div class="col-sm-9">
                        <select name="lang" class="form-control">
                            {% set langs = lang.getLangList() %}
                            {% if langs is iterable %}
                                {% for lg in langs %}
                                    <option value="{{ lg }}" {% if lang.getActive() == lg %} selected {% endif %}>{{ lg }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="host" class="col-sm-3 control-label">{{ lang._('formsInstall:inputHost') }}</label>

                    <div class="col-sm-9">
                        <input type="text" name="host" class="form-control" id="host" placeholder="127.0.0.1">
                    </div>
                </div>
                <div class="form-group">
                    <label for="port" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPort') }}</label>

                    <div class="col-sm-9">
                        <input type="text" name="port" class="form-control" id="port" placeholder="3306">
                    </div>
                </div>
                <div class="form-group">
                    <label for="user" class="col-sm-3 control-label">{{ lang._('formsInstall:inputUser') }}</label>

                    <div class="col-sm-9">
                        <input type="text" name="user" class="form-control" id="user" placeholder="root">
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPass') }}</label>

                    <div class="col-sm-9">
                        <input type="text" name="pass" class="form-control" id="pass" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="dbname" class="col-sm-3 control-label">{{ lang._('formsInstall:inputDB') }}</label>

                    <div class="col-sm-9">
                        <input type="text" name="dbname" class="form-control" id="dbname" placeholder="">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">{{ lang._('formsInstall:btnSave') }}</button>
            </div>
        </form>
    </div>
</section>