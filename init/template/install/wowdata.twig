<section class="content-header">
    <h1> config wowdata </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header">
            {{ lang._('install:steps:wowdata') }}
        </div>
        <form id="config" class="form-horizontal" method="post" action="/install/wowdata">
        <div class="box-body">
                <div class="form-group">
                    <label for="host" class="col-sm-3 control-label">{{ lang._('formsInstall:inputHost') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="host" class="form-control" id="host" placeholder="127.0.0.1">
                    </div>
                </div>
                <div class="form-group">
                    <label for="port" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPort') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="port" class="form-control" id="port" placeholder="3306">
                    </div>
                </div>
                <div class="form-group">
                    <label for="user" class="col-sm-3 control-label">{{ lang._('formsInstall:inputUser') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="user" class="form-control" id="user" placeholder="root">
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-3 control-label">{{ lang._('formsInstall:inputPass') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="pass" class="form-control" id="pass" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="auth" class="col-sm-3 control-label">{{ lang._('formsInstall:inputAuth') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="auth" class="form-control" id="auth" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="characters" class="col-sm-3 control-label">{{ lang._('formsInstall:inputChar') }}</label>
                    <div class="col-sm-9">
                        <input type="text" name="characters" class="form-control" id="characters" placeholder="">
                    </div>
                </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary pull-right">{{ lang._('formsInstall:btnSave') }}</button>
        </div>
        </form>
    </div>
</section>
